@inherits FeaturesBase
@if(BibleScripture is not null)
{
    <div class="ps-2 mt-2">
        <div class="pb-3">
            <h4 class=" fw-bold d-inline">@BibleScripture.Reference</h4>
            <div class="px-3 d-inline">
                <a class="text-decoration-none btn text-light px-2" style="background-color:rgb(53, 183, 255)" @onclick="OnClickKjvHandler">kjv</a>&nbsp;
                <a class="text-decoration-none btn text-light px-2" style="background-color:rgb(53, 183, 255)" @onclick="OnClickBbeHandler">bbe</a>&nbsp;
                <a class="text-decoration-none btn text-light px-2" style="background-color:rgb(53, 183, 255)" @onclick="@OnClickWebHandler">web</a>
            </div>
        </div>
           
        <div class="vertical-scrollable">
            <div class="row">
                @foreach (var item in BibleScripture.Verses)
                {
                    <p class="mb-2 fs-2"><b>@item.Verse</b> @item.Text</p>
                }
            </div>

        </div>
    </div>
    
   
}
